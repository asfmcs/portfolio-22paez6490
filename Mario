<script>
window.onload = function() {

    function start(){
var core = " ";
    var height;
    var rows;
    var space;
    var hashtag;
    do      {
        println("Give me a height of a number between 0 to 13");
        height = readInt("give me a height?");
         }
        while ((height < 0) || (height > 13));
         
    for (rows = 0; rows <= height; rows++)
    { for (space = (height - rows); space > 0; space--)
        {
            print(" ");
        }
        
         for (hashtag = 1; hashtag <= (rows + 1); hashtag++)
        {
            print("#");
        }
        
        print("\n");
    }
    return 1;
}


    if (typeof start === 'function') {
        start();
    }
};
